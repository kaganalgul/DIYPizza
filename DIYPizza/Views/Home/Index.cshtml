@model SiparisViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index" method="post">
    <h1>Pizzanı Kendin Yap</h1>
    <p>Lütfen pizzanızda bulunmasını istediğiniz malzemeleri seçiniz:</p>

    <div asp-validation-summary="All"></div>

    <div>
        @for (int i = 0; i < Model.Secimler.Count; i++)
        {
            <div>
                <input type="hidden" asp-for="@Model.Secimler[i].MalzemeId"/>
                <input type="hidden" asp-for="@Model.Secimler[i].MalzemeAd"/>
                <label>
                    <input type="checkbox" asp-for="@Model.Secimler[i].SeciliMi" /> @Model.Secimler[i].MalzemeAd
                </label>                
            </div>
        }
    <button class="btn btn-primary">Sipariş Ver</button>
    </div>
</form>

